<div class="uk-width-1-1">
	<%= link_to "Back to All Products", products_path %> | <%= link_to "Edit", edit_product_path(@product) %> | <%= link_to "Delete", @product, :confirm => "Are you sure you want to delete this product?", :method => :delete %>
</div>

<div class="uk-width-1-1">
	<p><%= @product[:name] %></p>
	<p><%= @product[:description] %></p>
</div>

<div class="uk-panel-teaser">
	<%= image_tag @product.picture_url %>
</div>

<div class="uk-panel-badge uk-badge uk-badge-notification uk-badge-danger big-text">
	<%=  @product.formatted_price %>
</div>

<!-- code from section 12 filters for product review -->

<% if current_user %>

	<h3>Reviews</h3>

	<p> Reviews for <%= @product.name %></p>

		<% @product.reviews.each do |review| %>
				<p>
					<%= review.comment %>
					<br>
					<% if review.user != nil %>
						<em> by <%= review.user.email %></em>
						Added on: <%= review.created_at %>
					<% end %>
				</p>
		<% end %>

<h4>New Review</h4>

	<%= form_for([@product, @review]) do |f| %>
		<% if @review.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved: </h2>

				<ul>
					<% @review.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>

			<div class="field">
				<%= f.label :comment %><br />
				<%= f.text_area :comment %>
			</div>
			<div class="actions">
				<%= f.submit %>
			</div>
		<% end %>
	<% end %>

	<% else %>
		<p>Please <%= link_to "log in", new_session_path %> to add a review.</p>

<% end %>
