<div>
	<%= link_to "Back to All Products", products_path %> | <%= link_to "Edit", edit_product_path(@product) %> | <%= link_to "Delete", @product, :confirm => "Are you sure you want to delete this product?", :method => :delete %>
</div>

<div>
	<p><%= @product[:name] %>, <%= @product[:description] %></p>
</div>

<div class="uk-panel-teaser">
	<%= image_tag @product.picture_url %>
</div>

<div class="uk-panel-badge uk-badge uk-badge-notification uk-badge-danger big-text">
	<%=  @product.formatted_price %>
</div>
